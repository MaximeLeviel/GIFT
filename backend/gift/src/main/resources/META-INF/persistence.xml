<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <class>com.st2apr.gift.model.Company</class>
        <class>com.st2apr.gift.model.Internship</class>
        <class>com.st2apr.gift.model.Student</class>
        <class>com.st2apr.gift.model.Tutor</class>

        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgresql://127.0.0.1:5432/db"/>
            <property name="eclipselink.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="eclipselink.jdbc.user" value="user"/>
            <property name="eclipselink.jdbc.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>